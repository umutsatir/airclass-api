# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=airclass
DB_PORT=3306

# API Configuration
API_VERSION=1.0.0
API_BASE_PATH=/airclass-api
APP_ENV=development
APP_DEBUG=true

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=86400  # 24 hours in seconds

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
ALLOWED_SLIDE_TYPES=pdf,ppt,pptx

# Security Configuration
CORS_ALLOWED_ORIGINS=*
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# Logging Configuration
LOG_LEVEL=debug  # debug, info, warning, error
LOG_FILE=/tmp/airclass.log

# Classroom Configuration
CLASSROOM_CODE_LENGTH=6
ATTENDANCE_CODE_EXPIRY=300  # 5 minutes in seconds
MAX_ACTIVE_CLASSROOMS_PER_TEACHER=1

# Session Configuration
SESSION_LIFETIME=120  # 2 hours in minutes
SESSION_SECURE=true
SESSION_HTTP_ONLY=true